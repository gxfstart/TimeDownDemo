<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hour_1"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_item_bg"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_1_color"
                android:textSize="35sp" />

            <View
                android:layout_width="6dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_hour_2"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_item_bg"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_1_color"
                android:textSize="35sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="时"
            android:textColor="@color/text_2_color"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="9dp"
        android:layout_height="50dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:paddingTop="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/colon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_minute_1"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_item_bg"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_1_color"
                android:textSize="35sp" />

            <View
                android:layout_width="6dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_minute_2"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_item_bg"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_1_color"
                android:textSize="35sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="分"
            android:textColor="@color/text_2_color"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="9dp"
        android:layout_height="50dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:paddingTop="4dp"
        android:scaleType="centerInside"
        android:src="@drawable/colon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_second_1"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_item_bg"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_1_color"
                android:textSize="35sp" />

            <View
                android:layout_width="6dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_second_2"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_item_bg"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_1_color"
                android:textSize="35sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="秒"
            android:textColor="@color/text_2_color"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>